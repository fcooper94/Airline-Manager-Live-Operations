# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
# Option 1: Use Railway's DATABASE_URL (recommended for Railway deployments)
# DATABASE_URL=postgresql://user:password@host:port/database

# Option 2: Individual connection parameters (for local development)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=airline_control
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# VATSIM API Configuration
VATSIM_DATA_URL=https://data.vatsim.net/v3/vatsim-data.json
VATSIM_POLL_INTERVAL=15000

# VATSIM OAuth (auth-dev)
VATSIM_CLIENT_ID=your_client_id_here
VATSIM_CLIENT_SECRET=your_client_secret_here
VATSIM_CALLBACK_URL=http://localhost:3000/auth/vatsim/callback
VATSIM_AUTH_URL=https://auth-dev.vatsim.net

# Session Configuration
SESSION_SECRET=change_this_to_a_random_secret_key

# Dev Bypass (for development only - allows quick login without VATSIM OAuth)
# Set DEV_BYPASS_ENABLED=true to show the bypass button on login page
# DEV_BYPASS_ENABLED=true
DEV_BYPASS_PASSWORD=your_dev_password_here

# Game Configuration
WORLD_ERA=2010
WORLD_TIME_ACCELERATION=1.0